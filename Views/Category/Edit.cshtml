@{
    ViewData["Title"] = "Editar Categoría";

    @model Tacovela.MVC.Models.Category.CategoryViewModel
}

<h2>@ViewData["Title"]</h2>

<div class="card col-lg-6">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">@ViewData["TypeView"]&nbsp;@ViewData["Title"]</h1>
                    <p class="mb-4">Cualquier información mal registrada podra alterar aqui.</p>
                </div>
                <form class="user" role="form" method="post" enctype="multipart/form-data" asp-action="Edit">
                    <div class="form-group">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" type="text" class="form-control form-control-user" placeholder="Nombre" />
                    </div>
                    <br />
                    <h6 class="mt-2">Subir Imagen</h6>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="" style="margin: 1.25rem;">
                                <div class="">
                                    <div class="text-center">
                                        <img src="//placehold.it/200" class="img-cover img-max-200 rounded-circle" alt="avatar" id="img-profile" />
                                    </div>
                                    <div class="custom-file">
                                        <input asp-for="Image" type="file" multiple class="custom-file-input" data-img-preview="img-profile" accept="image/*">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <input type="reset" class="btn btn-secondary" value="Cancelar" />
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
