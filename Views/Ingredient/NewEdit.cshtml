@{
    ViewData["Title"] = "Complemento";
    @model Tacovela.MVC.Models.Ingredient.IngredientViewModel
}

<h2>@ViewData["Title"]</h2>

<div class="card col-lg-6">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">@ViewData["SubTitle"]&nbsp;@ViewData["Title"]</h1>
                    <p class="mb-4">@ViewData["SubTitleDescription"]</p>
                </div>
                <form class="user" role="form" method="post" asp-action="NewEdit">
                    @if (ViewData["success"] != null)
                    {
                        <div class="alert alert-success text-success small">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <li>@ViewData["success"]</li>
                        </div>
                    }
                    <div asp-valitadion-summary-custom="None"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" type="text" class="form-control form-control-user" placeholder="Nombre" />
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Value" class="text-danger"></span>
                        <input asp-for="Value" type="text" class="form-control form-control-user" placeholder="Valor" />
                    </div>
                    <div class="form-group">
                        <input type="reset" class="btn btn-secondary" value="Cancelar" />
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>