<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Tacovela.MVC</title>

    <!-- Custom fonts for this template-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/site.css?v=1.0.0.0" rel="stylesheet" />
    <style>
        #userDropdown, #spanUserDropdown {
            color: white !important;
        }
        .topbar {
            background-color: #b02121 !important;
        }

        .sidebar-brand {
            color: white;
            font-size: 2rem;
            text-decoration: none;
        }

            .sidebar-brand:hover {
                color: #e2e2e2;
                text-decoration: none;
            }
    </style>

    @RenderSection("Styles", false)
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow bg-gradient-primary">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav">

                        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Order")">
                            <div class="sidebar-brand-icon rotate-n-15">
                                <i class="fas fa-laugh-wink"></i>
                            </div>
                            <div class="sidebar-brand-text mx-3">TACOVELA</div>
                        </a>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @{
                            await Html.RenderPartialAsync("_ProfileTopbar");
                        }
                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid col-lg-9">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            @{
                await Html.RenderPartialAsync("_Footer");
            }
        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="mdl-global" tabindex="-1" role="dialog" aria-labelledby="mdl-global" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <script type="text/javascript">
        $(document).submit('form', function (e) {
            var submit = $(this).find('[type=submit]');
            submit.prepend('<i class="fa fa-c fa-circle-notch fa-spin"></i>');
            submit.prop('disabled', true);
        });

        $(document).on("change", '.custom-file-input', function () {
            var fileName = $(this).val().split("\\").pop();
            if (fileName.length >= 10) {
                var arrayFileName = fileName.split('.');
                fileName = "imagen-perfil." + arrayFileName[arrayFileName.length - 1];
            }
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

            var input = $(this)[0];
            var idImgage = $(this).data('img-preview');

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {

                    $('#' + idImgage).attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        });

        $(document).on('click', '.btn-open-modal', function (e) {
            var target = $(this).data("target");
            var view = $(this).data("view");
            $(target).find('.modal-content').load(view, function () {

            });
        });

    </script>

    @RenderSection("Scripts", required: false)

</body>



</html>