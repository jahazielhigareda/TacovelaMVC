@{
    ViewData["Title"] = "Usuarios Administradores";
    @model List<Tacovela.MVC.Models.User.UserViewModel>
}



@section Styles {
    <link href="~/vendor/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}


<h2>@ViewData["Title"]</h2>

<div class="col-lg-12 col-md-12 col-sm-12 col-xl-10 p-0">
    <div asp-msg-tempdata="None"></div>
</div>

<div class="card shadow mb-5 col-lg-12 col-md-12 col-sm-12 col-xl-10 p-0">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">&nbsp;</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 ml-4 mb-3">
                @*<a href="@Url.Action("NewAdmin","User")" class="btn btn-success btn-icon-split">*@
                <a href="@Url.Action("NewEditAdmin","User")" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Nuevo Administrador</span>
                </a>
            </div>

        </div>
        <div class="row">

            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Telefono</th>
                                <th class="text-center max-100">Rol</th>
                                <th class="text-center max-100">Acciones</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Telefono</th>
                                <th class="text-center max-100">Rol</th>
                                <th class="text-center max-100">Acciones</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="row text-center">
                                            <a class="col-md-12" href="#">
                                                <img class="img-profile rounded-circle" src="@item.ImageProfile">
                                            </a>
                                            <div class="col-md-12">
                                                <p class="m-0">
                                                    <a class="hover-primary" href="#"><strong>@item.FirstName&nbsp;@item.LastName</strong></a>
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>

                                    <th class="text-center max-100">
                                        <span class="badge badge-success">Administrador</span>
                                    </th>
                                    <td class="text-center max-100">
                                        <a href="@Url.Action("EditAdmin","User", new { id = item.Id})" class="btn btn-warning btn-circle btn-sm">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="#" class="btn btn-primary btn-circle btn-sm btn-open-modal" data-toggle="modal" data-target="#mdl-global" data-view="@Url.Action("Delete","Ingredient", new { id = item.Id })">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#dataTable').DataTable();
        });
    </script>
}
