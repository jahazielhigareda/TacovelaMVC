@{
    ViewData["Title"] = "Perfil";
    @model Tacovela.MVC.Models.User.EditProfileViewModel
}

<h2>Perfil de Usuario</h2>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#perfil">Perfil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#address">Direcciones</a>
    </li>
</ul>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active container" id="perfil">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" method="post" asp-action="Profile">
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Nombre(s)</label>
                                        <div class="col-lg-9">
                                            <input asp-for="FirstName" type="text" class="form-control" value=""/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Apellidos (s)</label>
                                        <div class="col-lg-9">
                                            <input asp-for="LastName" type="text" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                        <div class="col-lg-9">
                                            <input asp-for="Email" type="email" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Teléfono</label>
                                        <div class="col-lg-9">
                                            <input asp-for="PhoneNumber" type="tel" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group text-right">
                                        <a class="form-control-label" href="@Url.Action("ChangePassword","User")">Cambiar Contraseña</a>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Password</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="password" value="***************" readonly />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label"></label>
                                        <div class="col-lg-9">
                                            <input type="reset" class="btn btn-secondary" value="Cancelar" />
                                            <input type="submit" class="btn btn-success" value="Guardar Cambios" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane container" id="address">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form">
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Calle</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" placeholder="" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Código postal</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" placeholder="" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Estado</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="email" placeholder="" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Ciudad</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="tel" placeholder="" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Colonia</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="tel" placeholder="" value="" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label"></label>
                                        <div class="col-lg-9">
                                            <input type="reset" class="btn btn-secondary" value="Cancelar" />
                                            <input type="button" class="btn btn-success" value="Guardar Cambios" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="" style="margin: 1.25rem;">
                <div class="card-body">
                    <div class="text-center">
                        <img src="//placehold.it/200" class="img-cover img-max-200 rounded-circle" alt="avatar" id="img-profile" />

                    </div>
                    <h6 class="mt-2">Subir Foto</h6>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" data-img-preview="img-profile" accept="image/*">
                        <label class="custom-file-label" for="customFile">Escoger una Foto</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

