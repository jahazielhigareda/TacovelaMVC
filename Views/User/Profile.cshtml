@{
    ViewData["Title"] = "Perfil";
}

<h2>Perfil de Usuario</h2>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#perfil">Perfil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#nothing">Direcciones</a>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active container" id="perfil">
        <div class="card shadow mb-4">
            
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form role="form">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Nombre(s)</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="Jane" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Apellidos (s)</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" value="Bishop" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Email</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="email" value="email@gmail.com" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Teléfono</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="tel" value="6621451121" />
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <a class="form-control-label" href="#">Cambiar Contraseña</a>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Password</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="password" value="***************" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-9">
                                    <input type="reset" class="btn btn-secondary" value="Cancel" />
                                    <input type="button" class="btn btn-primary" value="Save Changes" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <img src="//placehold.it/150" class="img-max-150" alt="avatar" id="img-profile" />
                                <h6 class="mt-2">Subir Foto</h6>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" data-img-preview="img-profile" accept="image/*">
                                    <label class="custom-file-label" for="customFile">Escoger una Foto</label>
                                </div>
                            </div>
                            
                        </div>
                        
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane container" id="nothing">
        <div class="card shadow mb-4">

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8">
                        <form role="form">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Calle</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" placeholder="" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Código postal</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" placeholder="" value=""  />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Estado</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="email" placeholder="" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Ciudad</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="tel" placeholder="" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Colonia</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="tel" placeholder="" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-9">
                                    <input type="reset" class="btn btn-secondary" value="Cancel" />
                                    <input type="button" class="btn btn-primary" value="Save Changes" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>