
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-8">
                <form role="form">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Contraseña Actual</label>
                        <div class="col-lg-5">
                            <input class="form-control" type="password" value="" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Nueva Contraseña</label>
                        <div class="col-lg-5">
                            <input class="form-control" type="password" value="" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Rep. Nueva Contraseña</label>
                        <div class="col-lg-5">
                            <input class="form-control" type="password" value="" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <input type="reset" class="btn btn-secondary" value="Cancelar" />
                            <input type="button" class="btn btn-success" value="Guardar Cambios" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>