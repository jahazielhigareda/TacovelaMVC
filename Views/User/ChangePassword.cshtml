
@{
    ViewData["Title"] = "Cambiar Contraseña";
    @model Tacovela.MVC.Models.User.ChangePasswordViewModel
}

<h2>@ViewData["Title"]</h2>

<div class="card col-lg-6">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">Cambiar Contraseña</h1>
                    <p class="mb-4">Cualquier información mal registrada podra alterar aqui.</p>
                </div>
                <form class="user" role="form" method="post" asp-action="ChangePassword">
                    <div asp-msg-tempdata="None"></div>
                    <div class="form-group">
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        <input asp-for="CurrentPassword" type="password" class="form-control form-control-user" placeholder="Contraseña Actual" />
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Nueva Contraseña" />
                    </div>

                    <div class="form-group">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Rep. Nueva Contraseña" />
                    </div>
                    <div class="form-group">
                        <input type="reset" class="btn btn-secondary" value="Cancelar" />
                        <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>