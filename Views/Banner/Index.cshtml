
@{
    ViewData["Title"] = "Configuracion Banner";
}

<h2>@ViewData["Title"]</h2>
<div class="card col-lg-6">
    <div class="card-body">
        <form role="form">
            <div class="text-center">
                <img src="//placehold.it/500x200" class="img-cover img-banner" alt="avatar" id="img-profile" />
            </div>
            <h6 class="mt-2">Subir Foto</h6>
            <div class="custom-file">
                <input type="file" class="custom-file-input" data-img-preview="img-profile" accept="image/*">
                <label class="custom-file-label" for="customFile">Escoger una Foto</label>
            </div>
            <div class="form-group row mt-2">
                <label class="col-lg-3 col-form-label form-control-label"></label>
                <div class="col-lg-12">
                    <input type="reset" class="btn btn-secondary" value="Cancelar" />
                    <input type="button" class="btn btn-success" value="Guardar Cambios" />
                </div>
            </div>
        </form>
    </div>
</div>
